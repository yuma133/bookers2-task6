<% if book.favorited_by?(user) %>
  <%= link_to book_favorites_path(book.id),data: {"turbolinks" => false}, method: :delete, remote: true do %>
    <span class="glyphicon glyphicon-heart"><%= book.favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book.id),data: {"turbolinks" => false},, method: :post, remote: true do %>
    <span class="glyphicon glyphicon-heart-empty"><%= book.favorites.count %></span>
  <% end %>
<% end %>